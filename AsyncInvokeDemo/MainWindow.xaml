<Window x:Class="AsyncInvokeDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock x:Name="Loading" Grid.Row="0" MinHeight="30" MinWidth="200" Margin="0 0 0 5"/>
        <Button Content="TaskLoading" Width="120" Height="30" Click="Button_Click" Grid.Row="1"/>
        <Button x:Name="Load" Content="AsyncLoading" Width="120" Height="30" Click="Load_Click" Grid.Row="1" Margin="260 0 0 0"/>
    </Grid>
</Window>
